{
    "name": "napgram-plugin-slave-market",
    "version": "1.0.0",
    "description": "大牛马时代 - NapGram 群聊经济养成游戏插件",
    "type": "module",
    "packageManager": "pnpm@10.26.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rm -rf dist release .cache",
        "build": "pnpm clean && tsc -p tsconfig.build.json",
        "type-check": "tsc -p tsconfig.json --noEmit",
        "validate": "node scripts/validate-plugin.mjs",
        "pack:zip": "pnpm build && node scripts/pack.mjs zip",
        "pack:tgz": "pnpm build && node scripts/pack.mjs tgz",
        "marketplace:snippet": "node scripts/marketplace-snippet.mjs",
        "test": "vitest",
        "lint": "eslint src --ext .ts"
    },
    "keywords": [
        "napgram",
        "plugin",
        "game",
        "economy",
        "slave-market"
    ],
    "author": "NapGram Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/magisk317/napgram-plugin-slave-market.git"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "napgram-plugin.json"
    ],
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@types/pg": "^8.15.5",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16",
        "eslint": "^9.39.2",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "prisma": "^7.2.0"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "pg": "^8.16.3",
        "@napgram/sdk": "^0.1.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
